rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'romperset@gmail.com';
    }
    function isAuth() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // 1. Users Collection
    match /users/{userId} {
      // Anyone authenticated can read basic profiles (needed for team lists/mentions)
      allow read: if isAuth();
      // Only the user themselves or Admin can edit the profile
      allow write: if isOwner(userId) || isAdmin();
    }

    // 2. Projects & Subcollections (Items, Logs, etc.)
    match /projects/{projectId} {
      // Helper function to check if user is member of this project
      // A user is a member if their email exists in the users collection for this project
      function isMemberOfProject() {
        return exists(/databases/$(database)/documents/users/$(request.auth.token.email)) &&
               get(/databases/$(database)/documents/users/$(request.auth.token.email)).data.currentProjectId == projectId;
      }
      
      // Read: User must be authenticated AND (admin OR member of project)
      allow read: if isAuth() && (isAdmin() || isMemberOfProject());
      
      // Write: User must be authenticated AND (admin OR member of project)
      allow write: if isAuth() && (isAdmin() || isMemberOfProject());
      
      // Subcollections inherit parent permissions
      match /{document=**} {
        allow read, write: if isAuth() && (isAdmin() || isMemberOfProject());
      }
    }

    // 3. Global Catalog
    match /catalog/{itemId} {
      allow read: if isAuth();
      
      // All authenticated users can add to catalog with validation
      allow create: if isAuth() && 
        request.resource.data.name is string &&
        request.resource.data.name.size() > 2 &&
        request.resource.data.name.size() < 100;
      
      // All authenticated users can update catalog items
      allow update: if isAuth() &&
        request.resource.data.name is string &&
        request.resource.data.name.size() > 2 &&
        request.resource.data.name.size() < 100;
      
      // Only admin can delete catalog items
      allow delete: if isAdmin();
    }

    // Default: Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
