rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'romperset@gmail.com';
    }
    function isAuth() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // 1. Users Collection
    match /users/{userId} {
      // Anyone authenticated can read basic profiles (needed for team lists/mentions)
      allow read: if isAuth();
      // Only the user themselves or Admin can edit the profile
      allow write: if isOwner(userId) || isAdmin();
    }

    // 2. Projects & Subcollections (Items, Logs, etc.)
    match /projects/{projectId} {
      // Read: User must be authenticated
      // TODO: Add membership check when project.members field is implemented
      allow read: if isAuth();
      
      // Write: User must be authenticated
      // TODO: Restrict to project members only
      allow write: if isAuth();
      
      // Subcollections inherit parent permissions
      match /{document=**} {
        allow read, write: if isAuth();
      }
    }

    // 3. Global Catalog
    match /catalog/{itemId} {
      allow read: if isAuth();
      
      // Users can add to catalog, but with rate limiting
      // (Firebase doesn't support rate limiting in rules, use Cloud Functions for production)
      allow create: if isAuth() && 
        request.resource.data.name is string &&
        request.resource.data.name.size() > 2 &&
        request.resource.data.name.size() < 100;
      
      // Only allow updates/deletes by admin
      allow update, delete: if isAdmin();
    }

    // Default: Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
