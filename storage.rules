rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'romperset@gmail.com';
    }
    function isAuth() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // 1. Sensitive User Documents (RIB, CNI, etc.)
    // PATH: users/{userId}/documents/...
    match /users/{userId}/documents/{allPaths=**} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // 2. Call Sheets
    // PATH: callsheets/...
    match /callsheets/{allPaths=**} {
      allow read, write: if isAuth(); // Accessible to all authenticated crew
    }

    // 3. Expenses / Receipts
    // PATH: production/{productionName}/{userName}/expenses/...
    match /production/{productionName}/{userName}/expenses/{fileName} {
      allow read: if isAuth();
      
      // Write with validation
      allow write: if isAuth() && 
        // File size limits: 50 MB for PDF, 10 MB for images
        (
          (request.resource.contentType == 'application/pdf' && request.resource.size < 50 * 1024 * 1024) ||
          (request.resource.contentType.matches('image/.*') && request.resource.size < 10 * 1024 * 1024)
        ) &&
        // Only allow specific MIME types
        (
          request.resource.contentType == 'application/pdf' ||
          request.resource.contentType == 'image/jpeg' ||
          request.resource.contentType == 'image/png' ||
          request.resource.contentType == 'image/webp'
        );
    }
    
    // 4. Marketplace Images
    // PATH: marketplace/...
    match /marketplace/{allPaths=**} {
      allow read: if isAuth();
      
      // Images only, max 10 MB
      allow write: if isAuth() &&
        request.resource.contentType.matches('image/.*') &&
        request.resource.size < 10 * 1024 * 1024;
    }
    
    // 5. Social Feed Images
    // PATH: social/...
    match /social/{allPaths=**} {
      allow read: if isAuth();
      
      // Images only, max 10 MB
      allow write: if isAuth() &&
        request.resource.contentType.matches('image/.*') &&
        request.resource.size < 10 * 1024 * 1024;
    }

    // Default: Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
